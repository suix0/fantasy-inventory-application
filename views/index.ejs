<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Home</title>
  <link href="output.css" rel="stylesheet" />
</head>
<body>
  <div>
    <!-- Home Main Content RPG-Like Inventory -->
    <main class="flex flex-col w-[650px]">
      <header>
        <ul class="flex gap-4 m-0 p-0">
          <li class="list-none">
            <a href="/" class="<%= !locals.currentCategory && 'bg-gray-600' %> no-underline text-black">
              All
            </a>
          </li>
          </li>
          <% categories.forEach(category => { %>
          <li class="list-none">
            <a 
            class="<%= locals.currentCategory && category.category_name === locals.currentCategory ? 'bg-gray-600' : '' %> no-underline text-black" 
            href="/<%= category.category_name.toLowerCase() %>"><%= category.category_name %></a>
          </li>
          <% }) %>
        </ul>
      </header>

      <div>
        <%- include('itemsTable') %>
      </div>
    </main>

    <!-- Header for navigating between Home, All Items, Categories -->
    <%- include('nav') %>
  </div>
</body>
</html>
